#!/bin/bash
set -eu

# create quaggavty group
addgroup --system quaggavty > /dev/null

# create quagga group
addgroup --system quagga > /dev/null

# create quagga user
adduser \
  --system \
  --ingroup quagga \
  --home /run/quagga/ \
  --no-create-home \
  --gecos "Quagga routing suite" \
  quagga  > /dev/null

# add quagga user to the quaggavty group
adduser quagga quaggavty

#DEBHELPER#
