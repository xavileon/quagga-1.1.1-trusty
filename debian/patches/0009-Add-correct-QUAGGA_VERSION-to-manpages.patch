diff --git a/doc/Makefile.am b/doc/Makefile.am
index 42af37c..df4215a 100644
--- a/doc/Makefile.am
+++ b/doc/Makefile.am
@@ -117,3 +117,10 @@ EXTRA_DIST = BGP-TypeCode draft-zebra-00.ms draft-zebra-00.txt \
 
 draft-zebra-00.txt: draft-zebra-00.ms
 	groff -T ascii -ms $< > $@
+
+.PHONY: versioned_manpages
+versioned_manpages: $(man_MANS)
+	for man in $^; do \
+		m4 -DQUAGGA_VERSION=$(QUAGGA_VERSION) $$man | sponge $$man; \
+		done
+
